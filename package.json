{
	"name": "workspace-helper",
	"version": "1.0.4-alpha",
	"description": "CLI tool to detect and fix mismatched dependency versions in monorepos",
	"keywords": [
		"monorepo",
		"dependency",
		"version",
		"align",
		"cli"
	],
	"bugs": {
		"url": "https://github.com/nyambogahezron/workspace-helper/issues"
	},
	"homepage": "https://workspace-helper-sepia.vercel.app/",
	"private": false,
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target=node --minify && tsc --emitDeclarationOnly --declaration",
		"docs:build": "cd docs && bun install && bun run build",
		"dev": "bun run ./src/index.ts",
		"start": "bun run ./dist/index.js",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"prepare": "husky",
		"prepublishOnly": "npm run build"
	},
	"main": "./dist/index.js",
	"types": "./dist/src/index.d.ts",
	"files": [
		"dist"
	],
	"bin": {
		"wh": "dist/index.js",
		"workspace-helper": "dist/index.js",
		"wva": "dist/index.js",
		"align-versions": "dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nyambogahezron/workspace-helper.git"
	},
	"author": "Hezron Nyamboga <hezronnyamboga01@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.15",
		"@clack/prompts": "^0.7.0",
		"@types/bun": "^1.3.9",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.0.0",
		"@types/semver": "^7.7.1",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"picocolors": "^1.1.1",
		"semver": "^7.7.4",
		"ts-jest": "^29.4.6",
		"typescript": "^5.8.3"
	}
}